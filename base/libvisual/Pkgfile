# Depends on: 

name=libvisual
version=0.4.0
release=1
source=(http://downloads.sourceforge.net/sourceforge/$name/$name-$version.tar.gz)

build() {
cd $name-$version
	./configure --prefix=/usr 
	make
	make DESTDIR=$PKG install
}

