# Description: Gestionnaire de session de gnome
# URL: http://www.gnome.org/
# Maintainer: NuTyX core team
# Packager: thierryn1 at hispeed dot ch
# Depends on: gnome-desktop, libnotify, gtk, dbus-glib, libglade, gconf, polkit-gnome

name=gnome-session
version=2.28.0
release=1
source=(http://ftp.gnome.org/pub/gnome/sources/$name/${version%.*}/$name-$version.tar.bz2)

build() {
	cd $name-$version
	./configure --prefix=$GNOME_PREFIX \
		--sysconfdir=/etc \
		--mandir=$GNOME_PREFIX/share/man \
		--with-at-spi-registryd-directory=$GNOME_PREFIX/lib/at-spi \
		--disable-schemas-install \
		--with-gconf-source="xml::/etc/gconf/gconf.xml.defaults"

	make
	make DESTDIR=$PKG install
}
