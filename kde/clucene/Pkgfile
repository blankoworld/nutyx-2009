name=clucene
version=0.9.21b
release=1
source=(http://switch.dl.sourceforge.net/sourceforge/$name/$name-core-$version.tar.bz2)

build() {
	cd $name-core-$version
	./configure --prefix=/usr 
	make
	make DESTDIR=$PKG install
}
