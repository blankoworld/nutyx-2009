# Depends on: dbus-glib, hal, thunar

name=thunar-volman
version=0.3.80
release=2
source=(http://goodies.xfce.org/releases/$name/$name-$version.tar.bz2)

build() {
cd $name-$version
	./configure --prefix=/usr \
	--libexecdir=/usr/lib/xfce4 \
	--sysconfdir=/etc \
	--localstatedir=/var \
	--disable-static
	make
	make DESTDIR=$PKG install
}

