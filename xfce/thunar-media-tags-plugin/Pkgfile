name=thunar-media-tags-plugin
version=0.1.2
release=6
source=(http://goodies.xfce.org/releases/$name/$name-$version.tar.bz2)

build() {
cd $name-$version
	./configure --prefix=/usr \
	--libexecdir=/usr/lib/xfce4 \
	--sysconfdir=/etc \
	--localstatedir=/var \
	--disable-static
	make
	make DESTDIR=$PKG install
}

