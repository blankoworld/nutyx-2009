name=ortp
version=0.15.0
release=1
source=(http://download.savannah.gnu.org/releases/linphone/ortp/sources/$name-$version.tar.gz)

build () {
	cd $name-$version
	./configure --prefix=/usr
	make
	make DESTDIR=$PKG install
	rm -rf $PKG/usr/share
}
