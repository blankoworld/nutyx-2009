# Depends on: fontconfig

name=libart_lgpl
version=2.3.20
release=1
source=( http://ftp.gnome.org/pub/gnome/sources/$name/2.3/$name-$version.tar.bz2\
)



build() {
	cd $name-$version
	./configure --prefix=/usr \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
                --disable-debug
	make
	make DESTDIR=$PKG install
}
