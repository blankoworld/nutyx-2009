# Depends on: libexif

name=fribidi
version=0.19.2
release=1
source=( http://fribidi.org/download/$name-$version.tar.gz\
	)
build() {
	cd $name-$version
	./configure --prefix=/usr \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info 
	make
	make DESTDIR=$PKG install
}
