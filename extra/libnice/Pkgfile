name=libnice
version=0.0.10
release=1
source=(http://nice.freedesktop.org/releases/$name-$version.tar.gz)

build() {
	export CFLAGS="$CFLAGS -fno-strict-aliasing"
	cd $name-$version
	./configure --prefix=/usr \
	--disable-dependency-tracking
	make
	make check
	make DESTDIR=$PKG install
}
