name=libspectre
version=0.2.2
release=1
source=( http://libspectre.freedesktop.org/releases/$name-$version.tar.gz )

build() { 
	 cd $name-$version 
	 ./configure --prefix=/usr 
 	 make 
 	 make DESTDIR=$PKG install 
}
